
<div class="row justify-content-center">
  <div class="col-8">
    <form class="card mt-3 " action="/contact" method="post">
      <!-- usar axios para enviar el mensaje -->
      <div class="card-header">
        <h5>Contacto</h5>
      </div>
      <div class="card-body border">
        <div class="mb-3">
          <label for="email" class="form-label">Correo</label>
          <input type="email" autocomplete="off" class="form-control" name="email" id="email" placeholder="nombre@empresa.com">
        </div>
        <div class="mb-3">
          <label for="message" class="form-label">Mensaje</label>
          <textarea class="form-control" id="message" name="message" rows="5" placeholder="Escriba su mensaje" style="resize: none;"></textarea>
        </div>
      </div>
      <div class="card-footer d-grid justify-content-md-end mb-3">
        <button class="btn btn-primary me-md-3 mt-3" type="submit">Enviar</button>
      </div>
    </form>
  </div>
</div>
